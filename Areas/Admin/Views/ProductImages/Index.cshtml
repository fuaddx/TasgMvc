@model IEnumerable<ProductImagesListVm>
@{
    ViewData["Title"] = "ProductImage";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">ProductImage</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead> 
                    <th>Id</th>
                    <th>ImagePath</th>
                    <th>Is Active</th>
                    <th>Product</th>
                    <th colspan="2" style="text-align:center">Actions</th>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.ImagePath</td>
                                <td>@item.IsActive</td>
                                <td>@item.Product.Name
                                <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td class="text-center"><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="4">No data</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

